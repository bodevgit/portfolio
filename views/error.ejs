<!-- Error Page -->
<div class="container">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="mb-3">Error</h1>
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle fa-2x me-3 align-middle"></i>
                <span class="align-middle"><%= message %></span>
            </div>
            <div class="mt-4">
                <a href="/documents" class="btn btn-primary me-2">
                    <i class="fas fa-arrow-left me-2"></i> Back to Documents
                </a>
                <a href="/" class="btn btn-outline-primary">
                    <i class="fas fa-home me-2"></i> Home
                </a>
            </div>
        </div>
    </div>
    
    <!-- Space decoration elements -->
    <div class="space-object planet" style="top: 70%; left: 10%;"></div>
    <div class="space-object comet" style="top: 30%; left: 80%;"></div>
</div>
