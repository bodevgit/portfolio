<!-- User Profile Page -->
<div class="container space-card mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Your Profile</h1>
            <p class="text-light">Manage your account settings and view your activity</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card space-card h-100">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="avatar-circle">
                            <i class="fas fa-user-astronaut fa-3x"></i>
                        </div>
                        <h3 class="mt-3"><%= user.name || user.username %></h3>
                        <p class="text-light">Member since <%= new Date(user.join_date).toLocaleDateString() %></p>
                    </div>
                    
                    <div class="user-details">
                        <div class="detail-item">
                            <span class="detail-label"><i class="fas fa-user me-2"></i>Username:</span>
                            <span class="detail-value"><%= user.username %></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label"><i class="fas fa-envelope me-2"></i>Email:</span>
                            <span class="detail-value"><%= user.email %></span>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a href="/user/logout" class="btn btn-outline-danger w-100">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="card space-card">
                <div class="card-body">
                    <h3 class="mb-4">Update Profile</h3>
                    
                    <% if (locals.message) { %>
                        <div class="alert alert-<%= message.type %>">
                            <%= message.text %>
                        </div>
                    <% } %>
                    
                    <form action="/user/update-profile" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= user.name || '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>">
                        </div>
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword">
                            <small class="form-text text-light">Required to update profile</small>
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New Password (Optional)</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword">
                            <small class="form-text text-light">Leave blank to keep current password</small>
                        </div>
                        <div class="mb-3">
                            <label for="confirmNewPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 100px;
        height: 100px;
        background: linear-gradient(45deg, #5425b3, #2b2473);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        box-shadow: 0 0 20px rgba(84, 37, 179, 0.5);
    }
    
    .user-details {
        margin-top: 20px;
    }
    
    .detail-item {
        display: flex;
        margin-bottom: 10px;
        border-bottom: 1px solid rgba(102, 16, 242, 0.2);
        padding-bottom: 10px;
    }
    
    .detail-label {
        font-weight: bold;
        color: var(--text-light);
        width: 40%;
    }
    
    .detail-value {
        color: var(--text-light);
        width: 60%;
    }
</style>
